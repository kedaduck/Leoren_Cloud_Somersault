<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#2ff99e</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/android:transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="MyVideoView.Widget.ProgressBar" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/videoview_progress_rotate</item>
        <item name="android:indeterminateDuration">1000</item>
    </style>
</resources>
