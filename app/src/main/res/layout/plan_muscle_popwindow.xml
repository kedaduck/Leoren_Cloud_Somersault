<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/select_plan_muscle_head"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="18dp"
            android:textSize="18sp"
            android:text="@string/select_plan_muscle"
            android:gravity="center_vertical"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@color/add_muscle_step_bar"
            android:text="@string/suer"
            android:textSize="18sp"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>

    <View style="@style/height_wheel_style"/>

    <RelativeLayout
        android:id="@+id/wheel_height_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.leoren.liehu.MyView.MyWheel.OtherView.WheelView
                android:id="@+id/plan_muscle_select_wheel"
                android:layout_width="60dp"
                android:layout_height="150dp"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/percent_text"
                android:textSize="15sp"
                android:textColor="@color/dark"
                android:gravity="center_vertical"/>


        </LinearLayout>


    </RelativeLayout>

    <View style="@style/height_wheel_style"
        android:layout_height="20dp"/>



</LinearLayout>