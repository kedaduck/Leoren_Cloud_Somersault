<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainFunctionView.FoodView.PlanActivity.DeclineFatActivity1">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/add_muscle_step_bar">

        <ImageButton
            android:id="@+id/from_declinefat2_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/back_icon_white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/decline_fat_plan_step2"
            android:textSize="18sp"
            android:layout_marginLeft="25dp"
            android:textColor="@color/light_dark"/>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/not_have_fat_record"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/plan_muscle"
            android:textColor="@color/light_dark"
            android:textSize="20dp"
            android:gravity="bottom|center_horizontal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="33.33%"
            android:textColor="@color/light_dark"
            android:textSize="35sp"
            android:gravity="center_horizontal"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="改变肌肉量的滑轮"/>


        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/add_muscle_step_bar"
            android:text="@string/next_step"
            android:textSize="20sp"
            android:textColor="@color/light_dark"/>

    </LinearLayout>

</LinearLayout>