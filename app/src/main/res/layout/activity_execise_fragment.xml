<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.MainFunctionView.ExeciseFragment">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/exe_page_color"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/exe_head"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/head_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/execise"
            android:textSize="20sp"
            android:textColor="@color/move_btn_unselect"
            android:layout_gravity="center"/>

    </android.support.v7.widget.Toolbar>

    <include layout="@layout/execise_head"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/execisetab_view"
        android:layout_weight="12"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </android.support.v4.view.ViewPager>



</LinearLayout>